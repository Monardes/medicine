<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/blank_adapter_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_5dp_press"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ask_adapter_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/error_tv"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ask_adapter_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/error_tv"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:id="@+id/blank_adapter_v"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/me_white" />

</LinearLayout>