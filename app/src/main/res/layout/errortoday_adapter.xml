<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/errortoday_adapter_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="生理学"
            android:textColor="@color/error_tv"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/errortoday_adapter_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="45dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/error_tv"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:id="@+id/errortoday_adapter_v"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/errortoday_adapter_iv"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/errortoday_adapter_tv_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/error_selector_tvnumber"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/errortoday_adapter_v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="@color/error_gray"
        android:visibility="gone" />

    <View
        android:id="@+id/errortoday_adapter_v2"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/me_white"
        android:visibility="gone" />
</LinearLayout>